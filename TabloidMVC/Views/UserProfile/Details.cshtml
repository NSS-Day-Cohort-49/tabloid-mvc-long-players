        <hr />

        </div>
            <a asp-action="UpdateUserTypeAdmin" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1" title="UpdateUserTypeAdmin">
                <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
            </a>
                <a asp-action="UpdateUserTypeAuthor" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1" title="UpdateUserTypeAuthor">
